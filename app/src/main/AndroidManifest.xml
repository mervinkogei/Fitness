<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitness">

    <application
        android:allowBackup="true"
        android:icon="@drawable/yoga_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.SettingsActivity"></activity>
        <receiver android:name=".AlarmNotifictionReceiver"></receiver>

        <activity android:name=".UI.MainActivity" />
        <activity android:name=".UI.ViewExercisesActivity" />
        <activity
            android:name=".UI.ExercisesListActivity"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>